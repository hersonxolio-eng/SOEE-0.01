    <script>
        // Función simple para poner la fecha
        const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
        document.getElementById('fecha-actual').textContent = new Date().toLocaleDateString('es-ES', options);

        // Lógica de navegación
        function showSection(sectionId) {
            // 1. Ocultar todas las secciones
            document.getElementById('section-proyectos').classList.add('hidden');
            document.getElementById('section-rrhh').classList.add('hidden');
            document.getElementById('section-finanzas').classList.add('hidden');

            // 2. Quitar estilos activos de todos los botones
            const buttons = ['btn-proyectos', 'btn-rrhh', 'btn-finanzas'];
            buttons.forEach(btnId => {
                const btn = document.getElementById(btnId);
                btn.classList.remove('active-btn', 'bg-blue-600', 'text-white'); // Quitar estilo activo
                btn.classList.add('bg-white', 'text-slate-600'); // Volver a estilo inactivo
                // Resetear el icono interno si fuera necesario, pero CSS group-hover lo maneja visualmente
            });

            // 3. Mostrar la sección seleccionada
            const selectedSection = document.getElementById('section-' + sectionId);
            selectedSection.classList.remove('hidden');

            // 4. Activar el botón seleccionado
            const activeBtn = document.getElementById('btn-' + sectionId);
            activeBtn.classList.remove('bg-white', 'text-slate-600');
            activeBtn.classList.add('active-btn');
        }
    </script>
