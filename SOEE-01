    </main>

    <script>
        // Datos simulados (Database)
        const db = {
            proyectos: {
                title: "Tablero de Proyectos",
                desc: "Supervisión de entregas y estados",
                theme: "blue",
                list: [
                    { name: "Rediseño Portal SOEE", status: "En Curso", progress: 75, due: "2 Semanas", team: 4, color: "blue" },
                    { name: "API de Facturación", status: "Revisión", progress: 90, due: "3 Días", team: 2, color: "purple" },
                    { name: "Migración Cloud", status: "Pausado", progress: 20, due: "TBD", team: 1, color: "orange" },
                    { name: "App Móvil Interna", status: "Planificación", progress: 5, due: "1 Mes", team: 5, color: "slate" }
                ]
            },
            rrhh: {
                title: "Capital Humano",
                desc: "Novedades y métricas del equipo",
                theme: "green",
                metrics: [
                    { label: "Total Empleados", val: "48", icon: "fa-user-group", trend: "+2 este mes" },
                    { label: "Ausencias Hoy", val: "1", icon: "fa-user-injured", trend: "Baja médica" },
                ],
                notices: [
                    { title: "Evaluación Trimestral", date: "Hoy", type: "Importante" },
                    { title: "Bienvenida a nuevos ingresos", date: "Ayer", type: "Social" }
                ]
            },
            finanzas: {
                title: "Resumen Financiero",
                desc: "Flujo de caja y presupuestos Q3",
                theme: "purple",
                cards: [
                    { title: "Ingresos Totales", val: "$124,500", sub: "+12% vs mes anterior", icon: "fa-arrow-trend-up", color: "green" },
                    { title: "Gastos Operativos", val: "$42,200", sub: "Dentro del presupuesto", icon: "fa-wallet", color: "red" }
                ],
                budgets: [
                    { dept: "Tecnología", used: 85, total: "50k" },
                    { dept: "Marketing", used: 45, total: "20k" },
                    { dept: "Administración", used: 60, total: "15k" }
                ]
            }
        };

        const app = {
            // Inicialización
            init: () => {
                const now = new Date();
                document.getElementById('current-date').innerText = now.toLocaleDateString('es-ES', { month: 'short', day: 'numeric', year: 'numeric' });
                app.render('proyectos'); // Cargar vista inicial
            },

            // Renderizado principal
            render: (section) => {
                const container = document.getElementById('content-area');
                const data = db[section];
                
                // Actualizar clases de botones
                document.querySelectorAll('.btn-option').forEach(btn => {
                    btn.classList.remove('btn-active');
                    btn.classList.add('bg-white', 'text-slate-800'); // Reset
                });
                
                const activeBtn = document.getElementById(`nav-${section}`);
                activeBtn.classList.remove('bg-white', 'text-slate-800');
                activeBtn.classList.add('btn-active');

                // Construir HTML basado en la sección
                let html = `
                    <div class="fade-in-up">
                        <header class="mb-8 flex justify-between items-end border-b border-slate-100 pb-4">
                            <div>
                                <h2 class="text-2xl font-bold text-slate-800">${data.title}</h2>
                                <p class="text-slate-500 text-sm mt-1">${data.desc}</p>
                            </div>
                            <div class="bg-${data.theme}-50 text-${data.theme}-600 px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wider">
                                Vista ${section}
                            </div>
                        </header>
                `;

                // VISTA PROYECTOS
                if (section === 'proyectos') {
                    html += `<div class="grid grid-cols-1 md:grid-cols-2 gap-4">`;
                    data.list.forEach(p => {
                        html += `
                            <div class="border border-slate-100 bg-slate-50/50 p-5 rounded-xl hover:bg-white hover:shadow-md transition-all group">
                                <div class="flex justify-between items-start mb-3">
                                    <div class="bg-white p-2 rounded-lg shadow-sm text-${p.color}-500">
                                        <i class="fa-solid fa-cube"></i>
                                    </div>
                                    <span class="text-xs font-medium px-2 py-1 rounded bg-slate-200 text-slate-600">${p.status}</span>
                                </div>
                                <h3 class="font-bold text-slate-700 mb-1 group-hover:text-blue-600 transition-colors">${p.name}</h3>
                                <div class="flex justify-between text-xs text-slate-400 mb-3">
                                    <span><i class="fa-regular fa-clock mr-1"></i> ${p.due}</span>
                                    <span><i class="fa-solid fa-users mr-1"></i> ${p.team} devs</span>
                                </div>
                                <div class="w-full bg-slate-200 rounded-full h-1.5 overflow-hidden">
                                    <div class="bg-${p.color}-500 h-1.5 rounded-full" style="width: ${p.progress}%"></div>
                                </div>
                            </div>
                        `;
                    });
                    html += `</div>`;
                }

                // VISTA RRHH
                if (section === 'rrhh') {
                    html += `
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                            <!-- Métricas -->
                            ${data.metrics.map(m => `
                                <div class="bg-gradient-to-br from-green-50 to-white border border-green-100 p-5 rounded-2xl">
                                    <div class="flex justify-between items-start">
                                        <div>
                                            <p class="text-slate-500 text-xs uppercase font-bold">${m.label}</p>
                                            <p class="text-3xl font-bold text-slate-800 mt-1">${m.val}</p>
                                        </div>
                                        <div class="text-green-500 bg-white p-2 rounded-full shadow-sm"><i class="fa-solid ${m.icon}"></i></div>
                                    </div>
                                    <p class="text-xs text-green-600 mt-3 font-medium bg-green-100/50 inline-block px-2 py-1 rounded">${m.trend}</p>
                                </div>
                            `).join('')}
                            
                            <!-- Panel de Avisos (ocupa el espacio restante si es desktop) -->
                            <div class="md:col-span-1 bg-slate-800 text-white p-5 rounded-2xl flex flex-col justify-between relative overflow-hidden">
                                <i class="fa-solid fa-bullhorn absolute -right-4 -bottom-4 text-8xl text-slate-700 opacity-20"></i>
                                <div>
                                    <h4 class="font-bold border-b border-slate-600 pb-2 mb-3">Tablón de Avisos</h4>
                                    <ul class="space-y-3">
                                        ${data.notices.map(n => `
                                            <li class="text-sm border-l-2 border-green-400 pl-3">
                                                <p class="font-medium">${n.title}</p>
                                                <p class="text-xs text-slate-400">${n.date} - ${n.type}</p>
                                            </li>
                                        `).join('')}
                                    </ul>
                                </div>
                                <button class="mt-4 w-full bg-green-500 hover:bg-green-600 text-white text-xs py-2 rounded transition">Ver Todo</button>
                            </div>
                        </div>
                    `;
                }

                // VISTA FINANZAS
                if (section === 'finanzas') {
                    html += `
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                            ${data.cards.map(c => `
                                <div class="flex items-center p-4 bg-white border border-slate-100 rounded-xl shadow-sm">
                                    <div class="w-12 h-12 rounded-full bg-${c.color}-50 text-${c.color}-500 flex items-center justify-center text-xl mr-4">
                                        <i class="fa-solid ${c.icon}"></i>
                                    </div>
                                    <div>
                                        <p class="text-slate-400 text-xs uppercase font-bold">${c.title}</p>
                                        <p class="text-2xl font-bold text-slate-800">${c.val}</p>
                                        <p class="text-xs text-${c.color}-600 font-medium">${c.sub}</p>
                                    </div>
                                </div>
                            `).join('')}
                        </div>

                        <div class="bg-slate-50 rounded-xl p-5 border border-slate-200">
                            <h4 class="text-sm font-bold text-slate-700 mb-4 uppercase tracking-wide">Ejecución Presupuestaria por Dpto.</h4>
                            <div class="space-y-4">
                                ${data.budgets.map(b => `
                                    <div>
                                        <div class="flex justify-between text-xs mb-1">
                                            <span class="font-semibold text-slate-600">${b.dept}</span>
                                            <span class="text-slate-500">${b.used}% de ${b.total}</span>
                                        </div>
                                        <div class="w-full bg-white border border-slate-200 rounded-full h-3 p-0.5">
                                            <div class="bg-gradient-to-r from-purple-500 to-indigo-500 h-full rounded-full transition-all duration-1000" style="width: ${b.used}%"></div>
                                        </div>
                                    </div>
                                `).join('')}
                            </div>
                        </div>
                    `;
                }

                html += `</div>`; // Cerrar container y fade
                container.innerHTML = html;
            }
        };

        // Iniciar
        app.init();
    </script>
</body>
</html>
